		a9 [label="Экспорт данных" shape=box]
		a10 [label="Отчеты и аналитика" shape=box]
	}
	admin -> a1
	admin -> a2
	admin -> a3
	admin -> a4
	admin -> a5
	admin -> a6
	admin -> a7
	admin -> a8
	admin -> a9
